{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "target/www/app",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "importHelpers": true
  },
  "include": [
    "src/main/webapp/app",
    "src/test/javascript/"
  ],
  "compileOnSave": true,
  "exclude": [
    "src/main/webapp/app/app.main-aot.ts"
  ]
}